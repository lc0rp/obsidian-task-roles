{
    "name": "task-roles",
    "version": "0.0.5",
    "description": "Assign roles, people and companies to tasks.",
    "main": "main.js",
    "scripts": {
        "dev": "node config/esbuild.config.mjs",
        "build": "npm run lint:ts && tsc -noEmit -skipLibCheck --project config/tsconfig.json && node config/esbuild.config.mjs production",
        "version": "node config/version-bump.mjs && git add manifest.json versions.json",
        "lint": "npm run lint:ts && npm run lint:md",
        "lint:ts": "ESLINT_USE_FLAT_CONFIG=true npx eslint -c config/eslint.config.js src",
        "lint:ts:fix": "ESLINT_USE_FLAT_CONFIG=true npx eslint -c config/eslint.config.js src --fix",
        "lint:md": "markdownlint \"**/*.md\" --ignore node_modules -c config/markdownlint.json",
        "lint:md:fix": "markdownlint \"**/*.md\" --ignore node_modules -c config/markdownlint.json --fix",
        "lint:fix": "npm run lint:ts:fix && npm run lint:md:fix",
        "preversion": "npm run lint",
        "test": "vitest run -c config/vitest.config.mjs",
        "coverage": "vitest run --coverage -c config/vitest.config.mjs"
    },
    "keywords": [],
    "author": "lc0rp",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "5.29.0",
        "@typescript-eslint/parser": "5.29.0",
        "@vitest/coverage-v8": "^3.2.4",
        "builtin-modules": "3.3.0",
        "c8": "^10.1.2",
        "esbuild": "^0.25.6",
        "eslint": "^8.57.1",
        "jsdom": "^26.1.0",
        "markdownlint-cli": "^0.45.0",
        "obsidian": "^1.8.7",
        "tslib": "2.4.0",
        "typescript": "4.7.4",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@codemirror/language": "^6.11.2"
    }
}
